{
    "globals": {
        "process": true
    },
    "env": {
        "node": true,
        "commonjs": true,
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "jest/valid-expect": "error",
        "@typescript-eslint/no-var-requires": "warn",
        "turbo/no-undeclared-env-vars": "warn"
    },
    "plugins": ["jest"]
}
